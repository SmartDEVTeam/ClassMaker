<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    tools:context=".ArmorItemMaker">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtClassName"
        android:gravity="center"
        android:hint="@string/class_name"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:inputType="textNoSuggestions" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_max_damage"
        android:id="@+id/checkCustomMaxDamage"
        android:layout_below="@+id/txtClassName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onCheckboxClicked"
        android:textSize="18sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemDescriptionId"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="@string/item_description_id"
        android:layout_below="@+id/checkCustomMaxDamage"
        android:inputType="textNoSuggestions" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtArmorItemMaterial"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="@string/item_armor_material"
        android:layout_below="@+id/txtItemDescriptionId"
        android:inputType="textNoSuggestions" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtArmorItemRenderType"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtArmorItemMaterial"
        android:hint="@string/item_armor_render_index"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtArmorItemSlot"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="@string/item_armor_slot"
        android:layout_below="@+id/txtArmorItemRenderType"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemCategory"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="@string/category"
        android:layout_below="@+id/txtArmorItemSlot"
        android:inputType="number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemTexture"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtItemCategory"
        android:hint="@string/item_texture"
        android:layout_marginTop="10dp"
        android:inputType="textNoSuggestions" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemMaxDamage"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtItemTexture"
        android:hint="@string/item_max_damage"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:visibility="gone" />

    <Button
        android:onClick="createMod"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateMod"
        android:gravity="center"
        android:text="@string/class_create"
        android:layout_below="@+id/txtItemMaxDamage"
        android:textSize="20sp"
        android:layout_marginTop="30dp" />
</RelativeLayout>
