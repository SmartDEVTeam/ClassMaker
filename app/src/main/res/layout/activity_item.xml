<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemMaker">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MaterialEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtClassName"
                android:hint="@string/class_name"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:inputType="textNoSuggestions"
                app:floatingLabel="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_max_stack_size"
                android:id="@+id/checkCustomStackSize"
                android:layout_below="@+id/txtClassName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onCheckboxClicked"
                android:textSize="18sp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stacked_by_data"
                android:id="@+id/checkStackedByData"
                android:layout_below="@+id/checkCustomStackSize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="onCheckboxClicked"
                android:textSize="18sp" />

            <MaterialEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemDescriptionId"
                android:layout_centerHorizontal="true"
                android:hint="@string/item_description_id"
                android:layout_below="@+id/checkStackedByData"
                android:inputType="textNoSuggestions" />

            <MaterialEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemCategory"
                android:layout_centerHorizontal="true"
                android:hint="@string/category"
                android:layout_below="@+id/txtItemDescriptionId"
                android:inputType="number" />

            <MaterialEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemTexture"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtItemCategory"
                android:hint="@string/item_texture"
                android:inputType="textNoSuggestions" />

            <MaterialEditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtItemMaxStackSize"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtItemTexture"
                android:hint="@string/item_max_stack_size"
                android:inputType="number"
                android:visibility="gone"
                android:layout_gravity="bottom|start" />

            <Button
                android:onClick="createMod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnCreateMod"
                android:gravity="center"
                android:text="@string/class_create"
                android:layout_below="@+id/txtItemMaxStackSize"
                android:textSize="20sp"
                android:layout_marginTop="30dp" />
        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_alignParentBottom="true" />

</RelativeLayout>