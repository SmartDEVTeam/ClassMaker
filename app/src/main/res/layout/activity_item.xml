<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context=".ItemMaker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classNameLayout">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemClassNameTxt"
                android:hint="@string/class_name"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:inputType="textNoSuggestions" />
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_max_stack_size"
            android:id="@+id/customStackSizeCheck"
            android:layout_below="@+id/classNameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stacked_by_data"
            android:id="@+id/checkStackedByData"
            android:layout_below="@+id/customStackSizeCheck"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onCheckboxClicked"
            android:textSize="18sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemDescriptionIdLayout"
            android:layout_below="@+id/checkStackedByData">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemDescriptionIdTxt"
                android:layout_centerHorizontal="true"
                android:hint="@string/description_id"
                android:inputType="textNoSuggestions" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemCategoryLayout"
            android:layout_below="@+id/itemDescriptionIdLayout">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemCategoryTxt"
                android:layout_centerHorizontal="true"
                android:hint="@string/category"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemTextureLayout"
            android:layout_below="@+id/itemCategoryLayout">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemTextureTxt"
                android:layout_centerHorizontal="true"
                android:hint="@string/item_texture"
                android:inputType="textNoSuggestions" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemMaxStackSizeLayout"
            android:layout_below="@+id/itemTextureLayout">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemMaxStackSizeTxt"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/itemTextureTxt"
                android:hint="@string/item_max_stack_size"
                android:inputType="number"
                android:visibility="gone" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:onClick="createMod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createModBtn"
            android:gravity="center"
            android:text="@string/class_create"
            android:layout_below="@+id/itemMaxStackSizeLayout"
            android:textSize="20sp"
            android:layout_marginTop="30dp" />
    </RelativeLayout>
</ScrollView>